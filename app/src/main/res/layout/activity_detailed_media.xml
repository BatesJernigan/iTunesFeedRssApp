<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:id="@+id/detailed_act_layout"
                tools:context="com.example.itunesfeedrssapp.DetailedMediaActivity">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/app_title"/>

    <TextView
        style="@style/scrollTextViewOptions"
        android:text="@string/hello_world"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/app_title"
        android:id="@+id/app_release"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_release"
        android:id="@+id/detailed_act_image_view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:text="@string/hello_world"
        android:layout_alignParentBottom="true"
        android:id="@+id/app_link_value"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:text="@string/app_link_text_label"
        android:layout_above="@id/app_link_value"
        android:id="@+id/app_link_text_view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_above="@id/app_link_text_view"
        android:id="@+id/duration_text_view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:text="@string/by_text_view_label"
        android:layout_above="@id/duration_text_view"
        android:id="@+id/artist_text_view"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/artist_text_view"
        android:layout_toEndOf="@id/artist_text_view"
        android:layout_alignTop="@id/artist_text_view"
        android:layout_alignBottom="@id/artist_text_view"
        android:id="@+id/artist_value"/>

</RelativeLayout>
